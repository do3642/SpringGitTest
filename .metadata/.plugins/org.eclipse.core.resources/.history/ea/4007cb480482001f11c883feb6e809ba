$(document).ready(function(){
	//$("#content").summernote(); // #content = textarea 아이디
	$("#content").summernote({
		height:400
	});
});


const postObject ={
	init: (e) =>{
		e.preventDefault();
		this.posting();
	},
	posting: ()=>{
		//아작스 부분
		let post = {
			title : $("#title").val(),
			content : $("#content").val(),
			cnt : 0,
		};
		
		$.ajax({
			type: "POST",
			url: "/post",
			data: JSON.stringify(post),
			contentType: "application/json; charset=utf-8"
		}).done(function(response){ // 실행성공 했을 때 
			alert(response.data);
			if(response.status == 200) 
			location.href = "/"; //성공 후 메인페이지로
			}).fail(function(error){
				console.log(error);
			});
				
		
	}
}

postObject.init();